@page "/telemetry"
@rendermode InteractiveServer
@inject WeatherApiClient ApiClient
@using NexusSentinel.Shared
@implements IDisposable

<PageTitle>Telemetry Dashboard</PageTitle>

<!-- Styles embedded directly to avoid caching issues -->
<style>
    .refresh-progress-bar {
        width: 100%;
        height: 6px;
        background-color: rgba(255, 255, 255, 0.1);
        margin-bottom: 1.5rem;
        border-radius: 3px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #4299e1, #9f7aea);
        transition: width 0.2s linear;
    }

    .debug-text {
        font-size: 0.7rem;
        color: #666;
        font-family: monospace;
        margin-top: 2px;
    }
</style>

<div class="telemetry-container">
    <h1>üì° Telemetry Dashboard</h1>

    <!-- Progress Bar -->
    <div class="refresh-progress-bar">
        <div class="progress-fill" style="@($"width: {progressValue}%;")"></div>
    </div>

    <!-- Debug Info (G√∂r√ºyorsanƒ±z kod √ßalƒ±≈üƒ±yor demektir) -->
    @* <div class="debug-text">Progress: @progressValue% | Refreshing: @isRefreshing</div> *@

    <div class="subtitle-container">
        <p class="subtitle">Real-time sensor data from NexusSentinel IoT devices</p>
        @if (isRefreshing)
        {
            <span class="refresh-indicator">üîÑ Refreshing...</span>
        }
        else
        {
            <span class="last-update">Last update: @lastUpdate.ToString("HH:mm:ss")</span>
        }
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading telemetry data...</p>
        </div>
    }
    else if (telemetryData == null || telemetryData.Length == 0)
    {
        <div class="empty-state">
            <p>üì≠ No telemetry data available yet.</p>
            <p class="hint">Make sure the Simulator is running and sending data.</p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card temp-card">
                <div class="stat-icon">üå°Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-value">@avgTemperature.ToString("F1")¬∞C</div>
                    <div class="stat-label">Average Temperature</div>
                </div>
            </div>

            <div class="stat-card humidity-card">
                <div class="stat-icon">üíß</div>
                <div class="stat-content">
                    <div class="stat-value">@avgHumidity.ToString("F1")%</div>
                    <div class="stat-label">Average Humidity</div>
                </div>
            </div>

            <div class="stat-card count-card">
                <div class="stat-icon">üìä</div>
                <div class="stat-content">
                    <div class="stat-value">@telemetryData.Length</div>
                    <div class="stat-label">Total Records</div>
                </div>
            </div>
        </div>

        <!-- Telemetry Table -->
        <div class="telemetry-table-container" @key="lastUpdate">
            <table class="telemetry-table">
                <thead>
                    <tr>
                        <th>Device ID</th>
                        <th>Temperature</th>
                        <th>Humidity</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody class="row-refresh-animation">
                    @foreach (var item in telemetryData)
                    {
                        <tr>
                            <td>
                                <span class="device-badge">@item.DeviceId</span>
                            </td>
                            <td>
                                <span class="temp-value @GetTempClass(item.Temperature)">
                                    @item.Temperature.ToString("F2")¬∞C
                                </span>
                            </td>
                            <td>
                                <span class="humidity-value">
                                    @item.Humidity.ToString("F2")%
                                </span>
                            </td>
                            <td class="timestamp">
                                @item.Timestamp.ToLocalTime().ToString("HH:mm:ss")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private TelemetryData[]? telemetryData;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private double avgTemperature = 0;
    private double avgHumidity = 0;
    private DateTime lastUpdate = DateTime.Now;

    // Timer ve Progress
    private Timer? _mainTimer;
    private int progressValue = 0;

    protected override void OnInitialized()
    {
        // 1. Initial Data Load (Background)
        _ = LoadTelemetryData();

        // 2. Start Timer (Runs every 100ms)
        // Timer'ƒ± OnInitialized i√ßinde ba≈ülatmak en g√ºvenilir y√∂ntemdir.
        _mainTimer = new Timer(async _ =>
        {
            // Progress Bar Logic
            progressValue += 2;
            if (progressValue >= 100)
            {
                progressValue = 0;
                // Veriyi yenile (Fire and forget)
                await RefreshData();
            }

            // UI Update
            await InvokeAsync(StateHasChanged);
        }, null, 0, 100);
    }

    private async Task LoadTelemetryData()
    {
        try
        {
            telemetryData = await ApiClient.GetTelemetryAsync();
            CalculateStats();
            lastUpdate = DateTime.Now;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task RefreshData()
    {
        if (isRefreshing) return;

        await InvokeAsync(async () =>
        {
            isRefreshing = true;
            StateHasChanged();

            try
            {
                // API √ßok hƒ±zlƒ± olduƒüu i√ßin UI efekti g√∂relim diye minik gecikme
                await Task.Delay(300);

                var newData = await ApiClient.GetTelemetryAsync();
                if (newData != null && newData.Length > 0)
                {
                    telemetryData = newData;
                    CalculateStats();
                    lastUpdate = DateTime.Now;
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Refresh Error: {ex.Message}");
            }
            finally
            {
                isRefreshing = false;
                StateHasChanged();
            }
        });
    }

    private void CalculateStats()
    {
        if (telemetryData != null && telemetryData.Length > 0)
        {
            avgTemperature = telemetryData.Average(t => t.Temperature);
            avgHumidity = telemetryData.Average(t => t.Humidity);
        }
    }

    private string GetTempClass(double temperature)
    {
        return temperature switch
        {
            (< 20) => "temp-cold",
            (>= 20 and < 25) => "temp-normal",
            (>= 25 and < 28) => "temp-warm",
            _ => "temp-hot"
        };
    }

    public void Dispose()
    {
        _mainTimer?.Dispose();
    }
}