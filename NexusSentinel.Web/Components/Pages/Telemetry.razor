@page "/telemetry"
@rendermode InteractiveServer
@inject WeatherApiClient ApiClient
@implements IDisposable

<PageTitle>Telemetry Dashboard</PageTitle>

<div class="telemetry-container">
    <h1>üì° Telemetry Dashboard</h1>
    <div class="subtitle-container">
        <p class="subtitle">Real-time sensor data from NexusSentinel IoT devices</p>
        @if (isRefreshing)
        {
            <span class="refresh-indicator">üîÑ Refreshing...</span>
        }
        else
        {
            <span class="last-update">Last update: @lastUpdate.ToString("HH:mm:ss")</span>
        }
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner"></div>
            <p>Loading telemetry data...</p>
        </div>
    }
    else if (telemetryData == null || telemetryData.Length == 0)
    {
        <div class="empty-state">
            <p>üì≠ No telemetry data available yet.</p>
            <p class="hint">Make sure the Simulator is running and sending data.</p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="stats-grid">
            <div class="stat-card temp-card">
                <div class="stat-icon">üå°Ô∏è</div>
                <div class="stat-content">
                    <div class="stat-value">@avgTemperature.ToString("F1")¬∞C</div>
                    <div class="stat-label">Average Temperature</div>
                </div>
            </div>

            <div class="stat-card humidity-card">
                <div class="stat-icon">üíß</div>
                <div class="stat-content">
                    <div class="stat-value">@avgHumidity.ToString("F1")%</div>
                    <div class="stat-label">Average Humidity</div>
                </div>
            </div>

            <div class="stat-card count-card">
                <div class="stat-icon">üìä</div>
                <div class="stat-content">
                    <div class="stat-value">@telemetryData.Length</div>
                    <div class="stat-label">Total Records</div>
                </div>
            </div>
        </div>

        <!-- Telemetry Table -->
        <div class="telemetry-table-container">
            <table class="telemetry-table">
                <thead>
                    <tr>
                        <th>Device ID</th>
                        <th>Temperature</th>
                        <th>Humidity</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in telemetryData)
                    {
                        <tr>
                            <td>
                                <span class="device-badge">@item.DeviceId</span>
                            </td>
                            <td>
                                <span class="temp-value @GetTempClass(item.Temperature)">
                                    @item.Temperature.ToString("F2")¬∞C
                                </span>
                            </td>
                            <td>
                                <span class="humidity-value">
                                    @item.Humidity.ToString("F2")%
                                </span>
                            </td>
                            <td class="timestamp">
                                @item.Timestamp.ToLocalTime().ToString("HH:mm:ss")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private TelemetryData[]? telemetryData;
    private bool isLoading = true;
    private bool isRefreshing = false;
    private double avgTemperature = 0;
    private double avgHumidity = 0;
    private Timer? _refreshTimer;
    private DateTime lastUpdate = DateTime.Now;

    protected override async Task OnInitializedAsync()
    {
        await LoadTelemetryData();

        // Start Timer. Call RefreshData every 5 seconds
        // Timer(callback, state, dueTime, period)
        // dueTime: 5000ms (5 seconds) after first run
        // period: 5000ms (5 seconds) intervals
        _refreshTimer = new Timer(async _ => await RefreshData(), null, 5000, 5000);
    }

    // Pulls data on page load
    private async Task LoadTelemetryData()
    {
        try
        {
            telemetryData = await ApiClient.GetTelemetryAsync();
            CalculateStats();
            lastUpdate = DateTime.Now;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading telemetry: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    // Called by Timer periodically
    private async Task RefreshData()
    {
        // Timer Callback runs in background thread
        // Must use InvokeAsync to update UI
        await InvokeAsync(async () =>
        {
            isRefreshing = true;
            StateHasChanged(); // Shows "refreshing" indicator

            // SPEED TEST: Since API is too fast, we add a 500ms delay to see the refresh indicator
            await Task.Delay(500); 

            try
            {
                var newData = await ApiClient.GetTelemetryAsync();

                if (newData != null && newData.Length > 0)
                {
                    telemetryData = newData;
                    CalculateStats();
                    lastUpdate = DateTime.Now;
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error refreshing telemetry: {ex.Message}");
            }
            finally
            {
                isRefreshing = false;
                StateHasChanged();
            }
        });
    }

    private void CalculateStats()
    {
        if (telemetryData != null && telemetryData.Length > 0)
        {
            avgTemperature = telemetryData.Average(t => t.Temperature);
            avgHumidity = telemetryData.Average(t => t.Humidity);
        }
    }

    /// <summary>
    /// Returns CSS class based on temperature value for color coding
    /// </summary>
    private string GetTempClass(double temperature)
    {
        return temperature switch
        {
            (< 20) => "temp-cold",
            (>= 20 and < 25) => "temp-normal",
            (>= 25 and < 28) => "temp-warm",
            _ => "temp-hot"
        };
    }

    /// <summary>
    /// Called when component is disposed (page is closed)
    /// Stops the timer to prevent memory leak
    /// </summary>
    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }
}